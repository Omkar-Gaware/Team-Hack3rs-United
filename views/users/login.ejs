<% layout('/layouts/boilerplate') %>

<style>
  /* Apply background image to body */
  body {
    background-image: url('https://wallpapercave.com/wp/wp9764031.jpg');
    background-size: cover; /* Ensures the image covers the entire background */
    background-position: center; /* Centers the background image */
    background-attachment: fixed; /* Keeps the image fixed when scrolling */
  }
</style>

<div class="row mt-3">
  <h2 class="col-6 offset-3" style="color: white;">Login</h2>
  <div class="col-6 offset-3" style="color: white;">
    <form action="/login" method="POST" class="needs-validation form" novalidate>
      <div class="mb-3 ">
        <label for="username" class="form-label mb-1">Username</label>
        <input
          id="username"
          type="text"
          class="form-control"
          name="username"
          required
        />
        <div class="invalid-feedback">Please enter valid Username</div>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label mb-1">Password</label>
        <input
          id="password"
          type="password"
          class="form-control"
          name="password"
          required
        />
        <div class="invalid-feedback">Please enter valid Password</div>
      </div>
      <button class="btn btn-success">Login</button>
    </form>
  </div>
</div>
